<%- include ('../partials/head'); %>

<header>
    <%- include ('../partials/navbar'); %>
    
</header>
<main class="classroomData align-top" data-classroom_id="<%= classroom._id %>">
    

    <div class="title1__container">
        <h1 class="title title-1">Remove Absent Students</h1>
        <div class="rectangle"></div>
    </div>

    <h2 class="title-2 m-b-s"><a href="/classroom/class/<%= classroom._id %>"><%= classroom.className%></a></h2>

    <div class="errors"></div>
       
    <div class="optionsContainer">
        <div class=gameForm>
            <label class="team_number_label" for="numberOfTeams">Number of Teams</label>
            <input class="team_number" id="numberOfTeams" type="number" name="numberOfTeams" min='1' value="1">
            <div class="increment-buttons">
                <button class="increment-button increment" type="button"><i class="fas fa-caret-up"></i></button>
                <button class="increment-button decrement" type="button"><i class="fas fa-caret-down"></i></button>
            </div>
        </div>
        <%- include ('../partials/options'); %>
</div>
       
        
        
   

    <div class="game__container">
        <div class="preview__teams"></div>
        <div class="teams"></div>
    </div>

    
    
</main>
<%- include ('../partials/footer'); %>
<script type="module" src="../public/js/team/controller.js"></script>

</body>

</html>
    
   

        
    
    

