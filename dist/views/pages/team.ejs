<%- include ('../partials/head'); %>

<header>
    <%- include ('../partials/navbar'); %>
    
</header>
<main class="classroomData align-right" data-classroom_id="<%= classroom._id %>">

    <div class="game-header">
        <%- include ('../partials/options'); %>
        <h2 class="title-2 hide"><a href="/classroom/class/<%= classroom._id %>"><%= classroom.className%></a></h2>
        <div class="game__form__container">
            <div class=gameForm>
                <label class="team_number_label" for="numberOfTeams">Number of Teams</label>
                <input class="team_number" id="numberOfTeams" type="number" name="numberOfTeams" min='1' value="1">
                <div class="increment-buttons">
                    <button class="increment-button increment" type="button"><i class="fas fa-caret-up"></i></button>
                    <button class="increment-button decrement" type="button"><i class="fas fa-caret-down"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="errors"></div>
        
    <div class="game__container">
        <div class="title3__container">
            <h2 class="title title-3">
                Remove Absent Students
            </h2>
        </div>
        <div class="line"></div>
        <div class="game-options">
            <button class="game-Btn playGameBtn"><i class="fas fa-play"></i></button>
            <button class="game-Btn next hide"><i class="fas fa-angle-double-right"></i></button>
            <button class="game-Btn next-student hide"><i class="fas fa-angle-right"></i></button>
            <button class="game-Btn previous-student hide"><i class="fas fa-angle-left"></i></button>
            <button class="game-Btn previous hide"><i class="fas fa-angle-double-left"></i></button>
        </div>
        <div class="preview__teams"></div>
        <div class="teams hide"></div>
    </div>

   

           


           


        
        
   
    
    
    
</main>
<%- include ('../partials/footer'); %>
