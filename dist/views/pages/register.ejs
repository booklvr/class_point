<%- include ('../partials/head'); %>

<header>
    <%- include ('../partials/navbar'); %>

</header>

<main class="align-middle">
    <div class="form__container">
        <h2 class="title-2">Register</h2>
        <form action="/users/" method="POST" id="registerForm" class="form-main" autocomplete="off">
            <div class="inputs__container">
                <div class="inputs__container-small">
                    <div class="form-control">
                        <label class="" for="name">Name</label>
                        <input class="" id="name" name="name" type="text" required/>
                        <small class="error-message">Error message</small>
                    </div>
                    <div class="form-control">
                        <label class="" for="email">Email</label>
                        <input class="" id="email" name="email" type="email" required/>
                        <small class="error-message">Error message</small>
                    </div>
                </div>
                <div class="inputs__container-small">
                    <div class="form-control">
                        <label class="" for="password" data-info="Enter a password longer than 7 characters">Password</label>
                        <input class="" id="password" name="password" type="password" required/>
                        <small class="error-message">Error message</small>
                    </div>
                    <div class="form-control">
                        <label class="" for="password2" data-info="Enter a password longer than 7 characters">Confirm Password</label>
                        <input class="" id="password2" name="password2" type="password" required/>
                        <small class="error-message">Error message</small>
                    </div>
                </div>
            </div>
            
            
                <button class="submitBtn" type="submit">Register</button>
        </form>
        <p class="form-change-route">
            Already have an account? 
            <a href="/users/login">Sign in</a>
        </p>

       
    </div>
</main>
<%- include ('../partials/footer'); %>
